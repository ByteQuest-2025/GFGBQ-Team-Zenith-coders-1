# Application Settings
APP_NAME=AI Grievance Redressal System
APP_VERSION=2.0.0
ENVIRONMENT=development

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=grievance_db

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-change-in-production-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email Notifications
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@grievance.gov.in

# SMS Notifications (Twilio)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# AI Configuration
AI_MODEL_PATH=models/
TRIAGE_CONFIDENCE_THRESHOLD=0.7
ENABLE_DUPLICATE_DETECTION=true
DUPLICATE_SIMILARITY_THRESHOLD=0.75

# File Upload
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=uploads/
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif

# Feature Flags
ENABLE_VOICE_INPUT=true
ENABLE_NOTIFICATIONS=true
ENABLE_FEEDBACK=true
ENABLE_ANALYTICS=true

# Rate Limiting
MAX_COMPLAINTS_PER_USER_PER_DAY=10
MAX_API_CALLS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# OTP Configuration (for future implementation)
OTP_ENABLED=false
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
